# Define a dictionary to map English words to ASL signs
asl_dictionary = {
    "hello": "👋",
    "world": "🌎",
    "how": "🤔",
    "are": "👍",
    "you": "👋",
}

def translate_to_asl(text):
    words = text.lower().split()
    asl_translation = ""
    
    for word in words:
        if word in asl_dictionary:
            asl_translation += asl_dictionary[word] + " "
        else:
            asl_translation += word + " "

    return asl_translation.strip()

while True:
    user_input = input("Enter English text to translate to ASL (or type 'exit' to quit): ")
    
    if user_input.lower() == 'exit':
        break
    
    asl_result = translate_to_asl(user_input)
    print("ASL Translation: ", asl_result)
